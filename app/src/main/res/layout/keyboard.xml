<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="330dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/timer_background"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvEkran"
            android:padding="16dp"
            android:text="0"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#FFF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
            <Button
                android:id="@+id/btnAdd1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textSize="32sp"
                android:textColor="#F00"
                android:background="@drawable/circle_white"/>
            <Button
                android:id="@+id/btnAdd2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textSize="32sp"
                android:textColor="#F00"
                android:background="@drawable/circle_white"/>
            <Button
                android:id="@+id/btnAdd3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="32sp"
                android:textColor="#F00"
                android:background="@drawable/circle_white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
            <Button
                android:id="@+id/btnAdd4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:textSize="32sp"
                android:textColor="#F00"
                android:background="@drawable/circle_white"/>
            <Button
                android:id="@+id/btnAdd5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:textSize="32sp"
                android:textColor="#F00"
                android:background="@drawable/circle_white"/>
            <Button
                android:id="@+id/btnAdd6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:textSize="32sp"
                android:textColor="#F00"
                android:background="@drawable/circle_white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
            <Button
                android:id="@+id/btnAdd7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:textSize="32sp"
                android:textColor="#F00"
                android:background="@drawable/circle_white"/>
            <Button
                android:id="@+id/btnAdd8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:textSize="32sp"
                android:textColor="#F00"
                android:background="@drawable/circle_white"/>
            <Button
                android:id="@+id/btnAdd9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:textSize="32sp"
                android:textColor="#F00"
                android:background="@drawable/circle_white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
            <Button
                android:id="@+id/btnAdd0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="0"
                android:textSize="32sp"
                android:textColor="#F00"
                android:background="@drawable/circle_white"/>
            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Potvrdi"
                android:textSize="32sp"
                android:textColor="#F00"
                android:background="@drawable/circle_white"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>