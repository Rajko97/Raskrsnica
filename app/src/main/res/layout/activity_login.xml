<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raskrsnica.app.LoginActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_marginBottom="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:paddingBottom="100dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/logo_white" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="Prijavite se da bi ste nastavili."
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_username_icon"
            android:drawablePadding="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:hint="KorisniÄko ime"
            android:inputType="textPersonName"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <EditText

            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.1"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_password_icon"
            android:hint="Lozinka"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="22dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/loginbutton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/loginbutton_background"
            android:text="Prijavi se"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="#d90647"
            />

    </LinearLayout>


</LinearLayout>
