<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.raskrsnica.app.LoginActivity"
    android:background="@drawable/background"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textColor="#D90647"
        android:textSize="22dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:drawablePadding="-30dp"/>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="750dp"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:paddingBottom="100dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="0.2"
            android:contentDescription="Logo"
            app:srcCompat="@drawable/logo_white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_margin="10dp"
            android:gravity="center"
            android:clipChildren="false"
            android:clipToPadding="false">
            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Prijavite se da bi ste nastavili."
                android:textColor="#ffffff"
                android:textSize="22dp" />
        </LinearLayout>


        <EditText
            android:id="@+id/etKorisnickoIme"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_username_icon"
            android:drawablePadding="15dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:hint="Email adresa"
            android:inputType="textEmailAddress"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <EditText

            android:id="@+id/etSifra"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.1"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_password_icon"
            android:hint="Lozinka"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="22dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/loginbutton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.1"
            android:background="@drawable/loginbutton_background"
            android:text="Prijavi se"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="#d90647"
            />

    </LinearLayout>


</LinearLayout>
