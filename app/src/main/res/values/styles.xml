<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="stil1">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:gravity">center</item>
        <item name="android:text">0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25dp</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="stil2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="MatchSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#EC84A3</item>
        <item name="android:dividerHeight">2dp</item>
    </style>
    <style name="MatchSpinnerTheme" parent="AppTheme">
        <item name="android:dropDownListViewStyle">@style/MatchSpinnerStyle</item>
    </style>
</resources>
