<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.raskrsnica.app.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:animateLayoutChanges="true"
        android:background="@drawable/tabs"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/settingsbutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/tab1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgSettings"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/ic_podesavanja_color" />

            <TextView
                android:id="@+id/settingstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="PodeÅ¡avanja"
                android:textColor="#D90647"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/databasebutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:clickable="true"
            android:orientation="horizontal"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/imgBaza"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_baza_grey"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/bazatext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baza"
                android:textAllCaps="false"
                android:textColor="#B9B9B9"
                android:textSize="30dp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:background="#ffffff"
        android:orientation="horizontal">

    </FrameLayout>
</LinearLayout>
