<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.raskrsnica.app.LoginActivity">
    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:gravity="center"
        android:textColor="#D90647"
        android:textSize="30dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:drawablePadding="-30dp"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <LinearLayout
            android:layout_width="520dp"
            android:layout_height="940dp"
            android:orientation="vertical"
            android:paddingBottom="100dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="100dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="0.2"
                android:contentDescription="Logo"
                app:srcCompat="@drawable/logo_white" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:layout_margin="10dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Prijavite se da bi ste nastavili."
                    android:textColor="#ffffff"
                    android:textSize="30dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/etKorisnickoIme"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.1"
                android:background="@drawable/edittext_background"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/ic_ussername_icon_xlarge"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Korisničko ime"
                android:inputType="textPersonName"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="30dp" />

            <EditText

                android:id="@+id/etSifra"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.1"
                android:background="@drawable/edittext_background"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/ic_password_xlarge"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Lozinka"
                android:inputType="textPassword"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="30dp" />

            <Button
                android:id="@+id/loginbutton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:layout_weight="0.1"
                android:background="@drawable/loginbutton_background"
                android:gravity="center"
                android:text="Prijavi se"
                android:textColor="#d90647"
                android:textSize="30dp" />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>
